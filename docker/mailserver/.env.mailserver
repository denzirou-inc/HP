# メールサーバー環境変数設定
# Sakura VPS環境用

# ドメイン設定
MAILSERVER_DOMAIN=denzirou.com
MAILSERVER_HOSTNAME=mail.denzirou.com

# 管理者メールアドレス
POSTMASTER_EMAIL=postmaster@denzirou.com
ADMIN_EMAIL=admin@denzirou.com

# SSL証明書設定
SSL_TYPE=letsencrypt
SSL_DOMAIN=mail.denzirou.com

# セキュリティ設定（パフォーマンス重視）
ENABLE_FAIL2BAN=1
ENABLE_RSPAMD=1
ENABLE_CLAMAV=0
ENABLE_SPAMASSASSIN=0

# その他設定
PERMIT_DOCKER=network
ONE_DIR=1
DOVECOT_MAILBOX_FORMAT=maildir

# パフォーマンス最適化
RSPAMD_GREYLISTING=0
POSTFIX_MESSAGE_SIZE_LIMIT=25600000
DEFAULT_QUOTA=500M

# Let's Encrypt設定
CERTBOT_EMAIL=admin@denzirou.com