# 本番環境設定ファイル（Sakura VPS用）
# このファイルをコピーしてproduction.envを作成してください

# サーバー情報
SERVER_HOST=your-sakura-vps-ip
SERVER_USER=your-username
SSH_PORT=22
SSH_KEY_PATH=~/.ssh/id_rsa

# プロジェクト設定
PROJECT_NAME=denzirou-company-web
DEPLOY_PATH=/opt/denzirou-company-web
BACKUP_PATH=/opt/backups/denzirou-company-web

# ドメイン設定
WEB_DOMAIN=denzirou.jp
MAIL_DOMAIN=denzirou.com
MAIL_HOST=mail.denzirou.com

# Next.js アプリケーション設定
NODE_ENV=production
PORT=3000

# メール設定（メールサーバー起動後に設定）
SMTP_HOST=mail.denzirou.com
SMTP_PORT=587
SMTP_USER=contact@denzirou.com
SMTP_PASS=your-smtp-password
MAIL_TO=contact@denzirou.com

# Basic認証設定（オプション）
BASIC_AUTH_USER=admin
BASIC_AUTH_PASS=your-basic-auth-password

# Git設定
GIT_REPO=https://github.com/your-username/company-web.git
GIT_BRANCH=main

# Docker設定
DOCKER_REGISTRY=
DOCKER_TAG=latest

# SSL設定
SSL_EMAIL=admin@denzirou.com

# モニタリング設定
HEALTHCHECK_URL=https://denzirou.jp/api/health
NOTIFICATION_EMAIL=admin@denzirou.com